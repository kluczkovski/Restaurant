@model IEnumerable<Coupon>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />


<div class="backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h3 class="text-secondary">Coupon  List</h3>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>

    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr class="tableHeader">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Discount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.MinimumAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IsActive)
                        </th>
                          <th></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.IsActive)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Counpon exist!!!</p>
        }
    </div>
</div>