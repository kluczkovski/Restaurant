@model IEnumerable<MenuItem>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="backgroundWhiteBorder">

    <div class="row">
        <div class="col-6">
            <h3 class="text-secondary">MenuItem List</h3>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    <table class="table table-hover">
        <thead>
            <tr class="tableHeader">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategory)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(mItem => item.Name)
                </td>
                 <td>
                    @Html.DisplayFor(mItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(mItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(mItem => item.SubCategory.Name)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>
