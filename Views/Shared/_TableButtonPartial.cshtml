@model int  

<td style="width:150px">
    <div class="btn-group" role="group">
        <a class="btn btn-primary text-white" asp-action="Details" asp-route-Id="@Model">
            <i class="fas fa-info-circle"></i>
        </a>

        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@Model">
            <i class="fas fa-pencil-alt"></i>
        </a>

        <a class="btn btn-primary text-white" asp-action="Delete" asp-route-Id="@Model">
            <i class="fas fa-trash-alt"></i>
        </a>

    </div>
</td>